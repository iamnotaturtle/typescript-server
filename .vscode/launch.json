    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch server",
            "protocol": "inspector",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
            "args": [
                "${workspaceRoot}/src/server.ts"
            ],
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}